<%= form_with(model: reservation, class: "max-w-lg") do |f| %>
  <% if reservation.errors.any? %>
    <div class="bg-red-50 p-4 rounded mb-6">
      <h2 class="text-red-700 font-medium"><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% reservation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6 bg-white p-4">
    <div>
      <%= f.label :book_id, class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :book_id, Book.available, :id, :title, 
          { prompt: "Select a book" }, 
          class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :member_id, class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :member_id, Member.active, :id, :name, 
          { prompt: "Select a member" }, 
          class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :reserved_on, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :reserved_on, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :expiry_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :expiry_date, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to 'Cancel', reservations_path, class: "px-4 py-2 border border-gray-300 rounded text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit class: "px-4 py-2 border border-transparent rounded shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>