<%= form_with(model: member, class: "max-w-lg") do |f| %>
  <% if member.errors.any? %>
    <div class="bg-red-50 p-4 rounded mb-6">
      <h2 class="text-red-700 font-medium"><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6 bg-white p-4">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :member_number, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :member_number, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, Member.statuses.keys.map { |s| [s.titleize, s] },
          { prompt: "Select status" },
          class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :address, rows: 3, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to 'Cancel', members_path, class: "px-4 py-2 border border-gray-300 rounded text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit class: "px-4 py-2 border border-transparent rounded shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>