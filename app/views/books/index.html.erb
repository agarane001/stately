<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Books</h1>
    <%= link_to new_book_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
      <iconify-icon icon="heroicons:plus" class="h-5 w-5 mr-1"></iconify-icon>
      New Book
    <% end %>
  </div>

  <div class="overflow-x-auto bg-white shadow-sm rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @books.each do |book| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to book.title, book_path(book), class: "hover:text-blue-600" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= book.author.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= book.category.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= book.available? ? 'bg-green-100 text-green-800' : 
                    book.borrowed? ? 'bg-yellow-100 text-yellow-800' : 
                    book.reserved? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                <%= book.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <div class="flex space-x-3">
                <%= link_to edit_book_path(book), class: "text-blue-600 hover:text-blue-900 inline-flex items-center" do %>
                  <iconify-icon icon="heroicons:pencil-square" class="h-5 w-5"></iconify-icon>
                <% end %>
                <%= button_to book_path(book), method: :delete, class: "text-red-600 hover:text-red-900 inline-flex items-center", 
                    form: { data: { turbo_confirm: 'Are you sure?' } } do %>
                  <iconify-icon icon="heroicons:trash" class="h-5 w-5"></iconify-icon>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>